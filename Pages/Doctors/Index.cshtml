@page
@model MedicalExpertSystem.Pages.Doctors.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Doctors[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctors[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctors[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctors[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctors[0].PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Doctors)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DecryptedUser.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DecryptedUser.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
            </tr>
        }
    </tbody>
</table>
